<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ahmad.controller.FamiliesPaneController">

    <center>
        <SplitPane dividerPositions="0.56">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <TilePane fx:id="familyGrid"
                          hgap="16" vgap="16" prefColumns="2">
                    <padding>
                        <Insets top="18" right="18" bottom="18" left="18"/>
                    </padding>
                </TilePane>
            </ScrollPane>

            <VBox spacing="12" prefWidth="320">
                <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

                <Label fx:id="familyNameLbl"
                       text="Select a Family"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TitledPane text="Needed per day" collapsible="false">
                    <VBox spacing="6" styleClass="metric-box">
                        <Label fx:id="needCalLbl" text="Calories: —"/>
                        <Label fx:id="needProLbl" text="Protein: —"/>
                        <Label fx:id="needCarbLbl" text="Carbs: —"/>
                        <Label fx:id="needVitLbl" text="Vitamins: —"/>
                    </VBox>
                </TitledPane>

                <TitledPane text="Current stockpile" collapsible="false">
                    <VBox spacing="6" styleClass="metric-box">
                        <Label fx:id="curCalLbl" text="Calories: —"/>
                        <Label fx:id="curProLbl" text="Protein: —"/>
                        <Label fx:id="curCarbLbl" text="Carbs: —"/>
                        <Label fx:id="curVitLbl" text="Vitamins: —"/>
                    </VBox>
                </TitledPane>

                <Separator/>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <ComboBox fx:id="produceCombo" prefWidth="160"/>
                    <Spinner fx:id="qtySpinner" prefWidth="90"/>
                    <Button fx:id="btnAssign" text="Assign" onAction="#onAssign"/>
                </HBox>

                <VBox spacing="4" style="-fx-opacity: 0.9;">
                    <Label text="This will give:" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                    <HBox spacing="12">
                        <Label fx:id="giveCalLbl"  text="Calories: 0"  />
                        <Label fx:id="giveProLbl"  text="Protein: 0"   />
                        <Label fx:id="giveCarbLbl" text="Carbs: 0"     />
                        <Label fx:id="giveVitLbl"  text="Vitamins: 0"  />
                    </HBox>
                </VBox>

                <Pane VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
